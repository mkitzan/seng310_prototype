#: import main prototype

<Landing>:
    BoxLayout:
        orientation: "vertical"
        size_hint_x: .3333

        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size 

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .1125
            
            canvas:
                Color:
                    rgba: .3, .3, .3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text_size: self.size
                halign: "left"
                valign: "middle"
                text: "  Clever Chords"
                font_size: 42
                size_hint_x: .85

            Button:
                size_hint_x: .175
                background_normal: "icons/microphone-normal.png"
                background_down: "icons/microphone-down.png"
                on_press: 
                    root.manager.transition.direction = "left"
                    root.manager.current = "record"

        ScrollView:
            scroll_type: ["bars"]
            bar_width: "15dp"
            bar_color: [.7, .7, .7, 1]
            bar_inactive_color: [.7, .7, .7, 1]
        
            GridLayout:
                id: songlist_view
                orientation: "vertical"
                size_hint_y: None
                cols: 1
                height: self.minimum_height
        
        
<Record>:
    BoxLayout:
        orientation: "vertical"
        size_hint_x: .3333

        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size 

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .1
            
            canvas:
                Color:
                    rgba: .3, .3, .3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                    
            Button:
                size_hint_x: .15
                background_normal: "icons/back-normal.png"
                background_down: "icons/back-down.png"
                on_press: 
                    root.manager.transition.direction = "right"
                    root.manager.current = "landing"
                    root.reset()

            Label:
                text_size: self.size
                halign: "left"
                valign: "middle"
                text: "Record"
                font_size: 42
                size_hint_x: .575
                    
            Spinner:
                size_hint: .25, .6666
                pos_hint: {"center_y": .5}
                id: dropdown
                text: "Guitar"
                values: "Guitar", "Ukulele", "Mandolin", "Banjo"
                font_size: 24
            
            Label:
                size_hint_x: .025
            
        AnchorLayout:
            id: grid
            orientation: "vertical"
            size_hint_y: .9
            anchor_y: "center"
            anchor_x: "center"
            
            Button:
                id: element
                size_hint: .5,.3333
                background_normal: "icons/stop-normal.png"
                background_down: "icons/stop-down.png"
                on_press: root.pressed()
           

<SaveInput>:
    BoxLayout:
        orientation: "vertical"
        
        Label:
            size_hint_y: .225
        
        Label:
            text: "Save Recording"
            font_size: 28
            size_hint_y: .075
            color: 0, 0, 0, 1
        
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .05
            
            Label:
                size_hint_x: .2
                
            TextInput:
                size_hint_x: .6
                hint_text: "Enter song name"
                id: songname
                font_size: 24
             
            Label:
                size_hint_x: .2
            
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .05
            
            Label:
                size_hint_x: .2
            
            Button:
                size_hint_x: .3
                font_size: 18
                text: "Delete"
                on_press: 
                    songname = ""
                    root.parent.parent.parent.manager.transition.direction = "right"
                    root.parent.parent.parent.manager.current = "landing"
                    root.parent.parent.parent.reset()
             
            Button:
                size_hint_x: .3
                font_size: 18
                text: "Save"
                on_press:
                    root.parent.parent.parent.manager.transition.direction = "right"
                    root.parent.parent.parent.manager.current = "landing"
                    root.save_song(root.parent.parent.parent)
                    root.parent.parent.parent.reset()
                    
            Label:
                size_hint_x: .2
                    
        Label:
            size_hint_y: .6


<Song>:
    BoxLayout:
        orientation: "vertical"
        size_hint_x: .3333

        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size 

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .1125
            
            canvas:
                Color:
                    rgba: .3, .3, .3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                    
            Button:
                size_hint_x: .15
                background_normal: "icons/back-normal.png"
                background_down: "icons/back-down.png"
                on_press: 
                    root.manager.transition.direction = "right"
                    root.manager.current = "landing"

            Label:
                id: title
                text_size: self.size
                halign: "left"
                valign: "middle"
                font_size: 36
                size_hint_x: .575
                    
            Spinner:
                size_hint: .25, .6666
                pos_hint: {"center_y": .5}
                id: instr
                values: "Guitar", "Ukulele", "Mandolin", "Banjo"
                font_size: 24
            
            Label:
                size_hint_x: .025
        
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .05
            
            canvas:
                Color:
                    rgba: .3, .3, .3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            ToggleButton:
                size_hint_x: .3333
                text: "Scroll"
                font_size: 20
                group: "mode"
                state: "down"
                
            ToggleButton:
                size_hint_x: .3333
                text: "Karaoke"
                font_size: 20
                group: "mode"
                state: "normal"
                 
            ToggleButton:
                size_hint_x: .3333
                text: "Edit"
                font_size: 20
                group: "mode"
                state: "normal"
                
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .05
                
        ScrollView:
            BoxLayout:
                id: sheetmusic
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height

